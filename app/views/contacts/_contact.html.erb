<div class="card card-custom bg-white border-white border-0 contact-card-container">
  <div class="row no-gutters contact-elements">
    <div class="col-auto">
      <%= image_tag contact.avatar.present? ? contact.avatar.url(:avatar) : contact.gravatar, class: "img-fluid gravatar-img" %>
    </div>
    <div class="col contact-description">
      <div class="card-block px-2">
        <h4 class="card-title">
          <%= contact.name %>
        </h4>
        <p class="card-text">
          <strong><%= contact.company %></strong><br>
          <%= contact.email %><br>
          <%= contact.address if contact.address.present? %><br>
          <%= contact.phone if contact.address.present? %><br>
          
        </p>
      </div>
    </div>
    <div class="col contact-actions">
      <%= link_to '', edit_contact_path(contact), class: "text-secondary glyphicon glyphicon-pencil contact-action-icon", title: "Edit", data: {toggle: "modal", target: "#form-modal"}, remote: true %>
      <%= link_to '', contact_path(contact), method: :delete, class: "text-danger glyphicon glyphicon-trash contact-action-icon", title: "Delete", data: { confirm: "Are you sure?" }, remote: true %>
    </div>
  </div>
</div>